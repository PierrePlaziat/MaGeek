<mvvm:BaseUserControl x:Class="MageekDesktopClient.UI.Views.AppPanels.CardInspector"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                      xmlns:ctrl="clr-namespace:PlaziatWpf.Controls;assembly=PlaziatWpf"
                      xmlns:mvvm="clr-namespace:PlaziatWpf.Mvvm;assembly=PlaziatWpf"
                      xmlns:mgui="clr-namespace:MageekDesktopClient.UI.Controls"
                      mc:Ignorable="d"
                      x:Name="CardInspectorName">

    <Grid Background="Black" AllowDrop="True" Drop="Grid_Drop">

        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition  MaxHeight="400"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>

        <mgui:CardIllustration CardUuid="{Binding DataContext.SelectedUuid, RelativeSource={RelativeSource AncestorType={x:Type UserControl}}}"
                                Margin="0"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Top" />

        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"></RowDefinition>
                <RowDefinition Height="*" MinHeight="100"></RowDefinition>
                <RowDefinition Height="auto"
                               MaxHeight="100"></RowDefinition>
                <RowDefinition Height="auto"
                               MaxHeight="100"></RowDefinition>
                <RowDefinition Height="auto"
                               MaxHeight="100"></RowDefinition>
                <RowDefinition Height="auto"
                               MaxHeight="100"></RowDefinition>
                <RowDefinition Height="auto"></RowDefinition>
            </Grid.RowDefinitions>

            <!-- Totals and means -->
            <StackPanel Grid.Row="0">

                <Grid  Margin="7,0,7,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="72"></ColumnDefinition>
                        <ColumnDefinition Width="40"></ColumnDefinition>
                        <ColumnDefinition Width="100"></ColumnDefinition>
                    </Grid.ColumnDefinitions>

                    <Label Grid.Column="0"
                           HorizontalAlignment="Center"
                           Content="{Binding TotalGot}" />
                    <Label Grid.Column="1"
                           HorizontalAlignment="Center"
                           Content="{Binding MeanPrice}" />
                    <DockPanel Grid.Column="2"
                               HorizontalAlignment="Right">
                        <Label Content="(" />
                        <Label Content="{Binding VariantCount}" />
                        <Label Content=")" />
                    </DockPanel>

                </Grid>

                <Separator Height="1"
                           Margin="0"
                           Background="#111"></Separator>

            </StackPanel>

            <!-- Variants -->
            <ListView Grid.Row="1"
                      BorderThickness="0"
                      Name="VariantListBox"
                      ItemsSource="{Binding Variants}"
                      SelectionMode="Single"
                      HorizontalAlignment="Stretch"
                      Margin="0"
                      Padding="0"
                      SelectionChanged="VariantListBox_SelectionChanged"
                      PreviewMouseLeftButtonDown="UIElement_PreviewMouseLeftButtonDown"
                      PreviewMouseMove="UIElement_PreviewMouseMove">

                <ListView.ContextMenu>
                    <ContextMenu>
                        <MenuItem Header="Set FAV"
                                  Command="{Binding SetFavCommand}" />
                        <MenuItem Header="Add to Deck"
                                  Command="{Binding AddToCurrentDeckCommand}" />
                    </ContextMenu>
                </ListView.ContextMenu>

                <ListView.ItemTemplate>

                    <DataTemplate>

                        <Grid Height="25"
                              Margin="0">

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="auto"></ColumnDefinition>
                                <ColumnDefinition Width="40"></ColumnDefinition>
                                <ColumnDefinition Width="50"></ColumnDefinition>
                                <ColumnDefinition Width="*"></ColumnDefinition>
                            </Grid.ColumnDefinitions>

                            <DockPanel Grid.Column="0"
                                       Height="25"
                                       Margin="0">

                                <Button Width="16"
                                        Height="25"
                                        Margin="0,0,0,0"
                                        Padding="0"
                                        Background="#000"
                                        Foreground="#444"
                                        Command="{Binding DataContext.SubstractCardFromCollectionCommand, 
                                        RelativeSource={RelativeSource AncestorType={x:Type UserControl}}}"
                                        CommandParameter="{Binding Card.Uuid}"
                                        Content="-"
                                        FontWeight="ExtraBlack"
                                        BorderThickness="0">
                                    <Button.Resources>
                                        <Style TargetType="Border">
                                            <Setter Property="CornerRadius"
                                                    Value="7,0,0,8" />
                                        </Style>
                                    </Button.Resources>
                                </Button>

                                <Label  Width="40"
                                        HorizontalContentAlignment="Center"
                                        HorizontalAlignment="Center"
                                        Foreground="White"
                                        Padding="5"
                                        Background="#111"
                                        Margin="0,0,0,0"
                                        Content="{Binding Collected}" />

                                <Button Width="16"
                                        Height="25"
                                        Margin="0,0,0,0"
                                        Padding="0"
                                        Background="#000"
                                        Foreground="#666"
                                        HorizontalAlignment="Right"
                                        Command="{Binding DataContext.AddCardToCollectionCommand, 
                                        RelativeSource={RelativeSource AncestorType={x:Type UserControl}}}"
                                        CommandParameter="{Binding Card.Uuid}"
                                        Content="+"
                                        FontWeight="ExtraBlack"
                                        BorderThickness="0">
                                    <Button.Resources>
                                        <Style TargetType="Border">
                                            <Setter Property="CornerRadius"
                                                    Value="0,7,8,0" />
                                        </Style>
                                    </Button.Resources>
                                </Button>

                            </DockPanel>

                            <DockPanel
                                       Grid.Column="1"
                                       HorizontalAlignment="Center">

                                <Label Content="{Binding Price.LastPriceEur}"
                                       Margin="0,5,2,0"
                                       Padding="0"
                                       Foreground="White" />
                                <Label Content="€"
                                       Margin="0,5,0,0"
                                       Padding="0"
                                       Foreground="White" />

                            </DockPanel>

                            <mgui:SetIcon SetCode="{Binding Set.Code}"
                                              Rarity="{Binding Card.Rarity}"
                                              Grid.Column="2" 
                                              Grid.RowSpan="2"
                                              Width="24"
                                              Height="24" />

                            <Label Grid.Column="3" Content="{Binding Set.Name}" />

                        </Grid>

                    </DataTemplate>

                </ListView.ItemTemplate>

            </ListView>

            <!-- Legalities -->
            <ListView Grid.Row="2" 
                          MaxHeight="100"
                          Background="#000">

                <DockPanel 
                               Height="20"
                               HorizontalAlignment="Left">
                    <Label Margin="0"
                               Padding="0"
                               Content="Standard" />
                    <Label Margin="0"
                               Padding="0"
                               Content=" : " />
                    <Label Margin="0" Foreground="White"
                               Padding="0"
                               Content="{Binding Legalities.Standard}" />
                </DockPanel>

                <DockPanel 
                               Height="20"
                               HorizontalAlignment="Left">
                    <Label Margin="0"
                               Padding="0"
                               Content="Legacy" />
                    <Label Margin="0"
                               Padding="0"
                               Content=" : " />
                    <Label Margin="0" Foreground="White"
                               Padding="0"
                               Content="{Binding Legalities.Legacy}" />
                </DockPanel>

                <DockPanel 
                               Height="20"
                               HorizontalAlignment="Left">
                    <Label Margin="0"
                               Padding="0"
                               Content="Vintage" />
                    <Label Margin="0"
                               Padding="0"
                               Content=" : " />
                    <Label Margin="0" Foreground="White"
                               Padding="0"

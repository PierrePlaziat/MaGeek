                </DockPanel>

                <DockPanel 
                               Height="20"
                               HorizontalAlignment="Left">
                    <Label Margin="0"
                               Padding="0"
                               Content="Brawl" />
                    <Label Margin="0"
                               Padding="0"
                               Content=" : " />
                    <Label Margin="0" Foreground="White"
                               Padding="0"

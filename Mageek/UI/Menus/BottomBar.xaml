<UserControl x:Class="MaGeek.UI.CustomControls.StateBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MaGeek.UI.CustomControls"
             mc:Ignorable="d" 
             d:DesignHeight="20" d:DesignWidth="800"
             >
    <Grid Background="Black">
        <DockPanel Margin="3,0,0,0">
            <Button Width="20" HorizontalAlignment="Right" Background="#222" Foreground="#444" Click="ButtonPause_Click">||</Button>
            <Button Width="20" HorizontalAlignment="Right" Background="#222" Foreground="#444" Click="ButtonPlay_Click">></Button>
            <Label Content="{Binding ImportCount}"/>
            <Label ToolTip="{Binding InfoText}">Importations</Label>
            <Grid>
                <ProgressBar Margin="3" Value="{Binding CurrentPercent}" Width="500 "/>
                <Label Content="{Binding State}" Foreground="Black"/>
            </Grid>
            <Button Width="20" ToolTip="Cancell all importations" Background="#222" Foreground="#444" Click="ButtonCancel_Click">X</Button>
            <Label HorizontalAlignment="Right" Content="{Binding SelectedString}"></Label>
        </DockPanel>
        
    </Grid>
</UserControl>

                <Label>card types</Label>

                <DockPanel>

                    <Separator Width="20" Background="Transparent"/>

                    <Label Content="Creatures" Foreground="#DDD" />
                    <Label Content="{Binding CreaturesNb}" FontWeight="Bold" Foreground="White" />

                    <Separator Width="20" Background="Transparent"/>

                    <Label Content="Spells" Foreground="#DDD" />
                    <Label Content="{Binding SpellsNb}" FontWeight="Bold" Foreground="White" />

                    <Separator Width="20" Background="Transparent"/>

                    <Label Content="Lands" Foreground="#DDD" />
                    <Label Content="{Binding LandsNb}" FontWeight="Bold" Foreground="White" />

                </DockPanel>

                <Label>hand</Label>
                
                <DockPanel>

                    <Separator Width="20" Background="Transparent"/>

                    <Button Width="50" Height="50" Click="Button_Click">New</Button>
                    
                    <Separator Width="20" Background="Transparent"/>

                    <DockPanel Name="HandPanel" HorizontalAlignment="Left"></DockPanel>

                    <Separator Width="20" Background="Transparent"/>

                    <Button Width="50" Height="50" Click="Button_Click_1">Draw</Button>

                    <Separator Width="20" Background="Transparent"/>

                </DockPanel>

                <Label>Format check</Label>

                <DockPanel>

                    <Separator Width="20" Background="Transparent"/>

                    <Label Content="Standard" Foreground="#DDD" />
                    <Label Content="{Binding StandardOk}" FontWeight="Bold" Foreground="White" />

                    <Separator Width="20" Background="Transparent"/>

                    <Label Content="Commander" Foreground="#DDD" />
                    <Label Content="{Binding CommanderOk}" FontWeight="Bold" Foreground="White" />

                </DockPanel>

            </StackPanel>
            
        </ScrollViewer>


        <Grid Visibility="{Binding Visible}" 
              Background="Black"
              HorizontalAlignment="Stretch"
              VerticalAlignment="Stretch"
              Grid.RowSpan="2">
            <Label HorizontalAlignment="Center" 
                   VerticalAlignment="Center"
                   Content="No deck selected"/>
        </Grid>
        
    </Grid>
</UserControl>

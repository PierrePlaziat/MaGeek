<Window x:Class="MaGeek.UI.Windows.Importers.PrecoImporter"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MaGeek.UI.Windows.Importers"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
        </Grid.RowDefinitions>

        <ListView Name="PrecoListView"  
                  ItemsSource="{Binding PrecoList}" 
                  MouseDoubleClick="ListView_MouseDoubleClick">
        </ListView>

        <Button Grid.Row="1" Click="Button_Click">Import Selected Decks</Button>

    </Grid>
    
</Window>

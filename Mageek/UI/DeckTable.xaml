            </StackPanel>
            
        </ScrollViewer>

        <Grid Visibility="{Binding Visible}" 
              HorizontalAlignment="Stretch"
              VerticalAlignment="Stretch"
              Grid.RowSpan="2">
            <Label HorizontalAlignment="Center" 
                   VerticalAlignment="Center"
                   Content="No deck selected"/>

                                        </ContextMenu>
                                    </ContentControl.ContextMenu>
                                    <local:CardIllustration Height="{Binding CurrentCardSize, RelativeSource={RelativeSource FindAncestor, AncestorType=UserControl},Mode=TwoWay}" 

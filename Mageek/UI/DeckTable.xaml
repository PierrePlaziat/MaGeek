<UserControl x:Class="MaGeek.UI.DeckTable"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MaGeek.UI"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800">

    <Grid Background="#222">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="26"></RowDefinition>
            <RowDefinition Height="26"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        
        <DockPanel Grid.ColumnSpan="5">
            <Label FontWeight="Bold" Foreground="White" Content="{Binding CurrentDeck.Title}"></Label>
        </DockPanel>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <Label Grid.Column="0" Background="Black" Content="{Binding CurrentDeck.DevotionB}"></Label>
            <Label Grid.Column="1" Background="White" Content="{Binding CurrentDeck.DevotionW}"></Label>
            <Label Grid.Column="2" Background="DodgerBlue" Content="{Binding CurrentDeck.DevotionU}"></Label>
            <Label Grid.Column="3" Background="DarkSeaGreen" Content="{Binding CurrentDeck.DevotionG}"></Label>
            <Label Grid.Column="4" Background="IndianRed" Content="{Binding CurrentDeck.DevotionR}"></Label>
            
        </Grid>


        <ListView Name="LVDeck" ItemsSource="{Binding CurrentDeck.CardRelations}" 
                   BorderThickness="0"   Background="#222" Grid.Row="2" >

            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                    <Setter Property="Padding" Value="0"/>
                </Style>
            </ListView.ItemContainerStyle>

            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid Background="Black" Height="20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="20"></ColumnDefinition>
                            <ColumnDefinition Width="11"></ColumnDefinition>
                            <ColumnDefinition Width="20"></ColumnDefinition>
                            <ColumnDefinition Width="*"></ColumnDefinition>
                            <ColumnDefinition Width="auto"></ColumnDefinition>
                        </Grid.ColumnDefinitions>

                        <Label Foreground="White" Padding="4,1,1,1" Grid.Column="3" Content="{Binding Card.CardId}"></Label>

                        <local:ManaCost Grid.Column="4" Cost="{Binding Card.ManaCost}" HorizontalAlignment="Right"/>

                        <Button Grid.Column="0" Height="20" Foreground="Black" Content="-" Click="LessCard"></Button>
                        <Label  Grid.Column="1" Height="20" Background="#555" Padding="2" Foreground="White" Content="{Binding Quantity}"></Label>
                        <Button Grid.Column="2" Height="20" Foreground="Black" Content="+" Click="MoreCard"></Button>

                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <UniformGrid Name="UGrid" Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="1" Grid.RowSpan="3">
            
            <Border Background="AliceBlue" Grid.ColumnSpan="2">
                <TextBlock Text="1"/>
            </Border>
            <Border Background="Cornsilk">
                <TextBlock Text="2"/>
            </Border>
            <Border Background="DarkSalmon">
                <TextBlock Text="3"/>
            </Border>
            <Border Background="Gainsboro" Grid.RowSpan="2">
                <TextBlock Text="4"/>
            </Border>
            <Border Background="LightBlue">
                <TextBlock Text="5"/>
            </Border>
            <Border Background="MediumAquamarine">
                <TextBlock Text="6"/>
            </Border>
            <Border Background="MistyRose">
                <TextBlock Text="7"/>
            </Border>
        </UniformGrid>

    </Grid>
    
</UserControl>

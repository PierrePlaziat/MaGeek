                                      Click="SetCommandant"
                                      CommandParameter="{Binding RelativeSource={RelativeSource Self}, Path=Parent}" />
                            <MenuItem Header="To Side"
                                      Click="ToSide"
                                      CommandParameter="{Binding RelativeSource={RelativeSource Self}, Path=Parent}" />
                        </ContextMenu>
                    </ListView.ContextMenu>

                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Grid Height="20"
                                  MouseWheel="ScrollViewer_MouseWheel">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="20"></ColumnDefinition>
                                    <ColumnDefinition Width="20"></ColumnDefinition>
                                    <ColumnDefinition Width="20"></ColumnDefinition>
                                    <ColumnDefinition Width="*"></ColumnDefinition>
                                    <ColumnDefinition Width="auto"></ColumnDefinition>
                                </Grid.ColumnDefinitions>

                                <Label Foreground="White"
                                       Padding="4,1,1,1"
                                       Grid.Column="3"
                                       Content="{Binding Card.Name}" />

                                <local:ManaCost Grid.Column="4"
                                                Cost="{Binding Card.ManaCost}"
                                                HorizontalAlignment="Right" />

                                <Button Grid.Column="0"
                                        Height="20"
                                        Foreground="Black"
                                        Content="-"
                                        Command="{Binding LessCard}" />
                                <Label  Grid.Column="1"
                                        Height="20"
                                        Padding="2"
                                        Foreground="White"
                                        Content="{Binding Quantity}"
                                        HorizontalAlignment="Center" />
                                <Button Grid.Column="2"
                                        Height="20"
                                        Foreground="Black"
                                        Content="+"
                                        Command="{Binding MoreCard}" />

                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>

                </ListView>


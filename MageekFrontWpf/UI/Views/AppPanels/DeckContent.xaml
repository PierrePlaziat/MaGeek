                                      CommandParameter="{Binding RelativeSource={RelativeSource Self}, Path=Parent}" />
                            <MenuItem Header="To Side"
                                      Click="ToSide"
                                      CommandParameter="{Binding RelativeSource={RelativeSource Self}, Path=Parent}" />
                        </ContextMenu>
                    </ListView.ContextMenu>

                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Grid Height="20"
                                  MouseWheel="ScrollViewer_MouseWheel">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="20"></ColumnDefinition>
                                    <ColumnDefinition Width="20"></ColumnDefinition>
                                    <ColumnDefinition Width="20"></ColumnDefinition>
                                    <ColumnDefinition Width="*"></ColumnDefinition>
                                    <ColumnDefinition Width="auto"></ColumnDefinition>
                                </Grid.ColumnDefinitions>

                                <Label Foreground="White"
                                       Padding="4,1,1,1"
                                       Grid.Column="3"
                                       Content="{Binding Card.Name}"></Label>

                                <local:ManaCost Grid.Column="4"
                                                Cost="{Binding Card.ManaCost}"
                                                HorizontalAlignment="Right" />

                                <Button Grid.Column="0"
                                        Height="20"
                                        Foreground="Black"
                                        Command="{Binding LessCard}"
                                        Content="-" />
                                <Label  Grid.Column="1"
                                        Height="20"
                                        Padding="2"
                                        Foreground="White"
                                        Content="{Binding Quantity}"
                                        HorizontalAlignment="Center"></Label>
                                <Button Grid.Column="2"
                                        Height="20"
                                        Foreground="Black"
                                        Content="+"
                                        Command="{Binding MoreCard}" />

                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>

                </ListView>

                <Label>Artifacts :</Label>
                <ListView ItemsSource="{Binding CurrentArtifacts}"
                          BorderThickness="0"
                          Background="#222"
                          MouseDoubleClick="SelectionChanged"
                          Grid.Row="3"
                          SelectionMode="Single">

                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem">
                            <Setter Property="HorizontalContentAlignment"
                                    Value="Stretch" />
                            <Setter Property="Padding"
                                    Value="0" />
                            <Setter Property="Background"
                                    Value="#000" />
                        </Style>
                    </ListView.ItemContainerStyle>

                    <ListView.ContextMenu>
                        <ContextMenu>
                            <MenuItem Header="Set Commandant"
                                      Click="SetCommandant"
                                      CommandParameter="{Binding RelativeSource={RelativeSource Self}, Path=Parent}" />
                            <MenuItem Header="To Side"
                                      Click="ToSide"
                                      CommandParameter="{Binding RelativeSource={RelativeSource Self}, Path=Parent}" />
                        </ContextMenu>
                    </ListView.ContextMenu>

                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Grid Height="20"
                                  MouseWheel="ScrollViewer_MouseWheel">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="20"></ColumnDefinition>
                                    <ColumnDefinition Width="20"></ColumnDefinition>
                                    <ColumnDefinition Width="20"></ColumnDefinition>
                                    <ColumnDefinition Width="*"></ColumnDefinition>
                                    <ColumnDefinition Width="auto"></ColumnDefinition>
                                </Grid.ColumnDefinitions>

                                <Label Foreground="White"
                                       Padding="4,1,1,1"
                                       Grid.Column="3"
                                       Content="{Binding Card.Name}"></Label>

                                <local:ManaCost Grid.Column="4"
                                                Cost="{Binding Card.ManaCost}"
                                                HorizontalAlignment="Right" />

                                <Button Grid.Column="0"
                                        Height="20"
                                        Foreground="Black"
                                        Content="-"
                                        Command="{Binding LessCard}" />
                                <Label  Grid.Column="1"
                                        Height="20"
                                        Padding="2"
                                        Foreground="White"
                                        Content="{Binding Quantity}"
                                        HorizontalAlignment="Center"></Label>
                                <Button Grid.Column="2"
                                        Height="20"
                                        Foreground="Black"
                                        Content="+"
                                        Command="{Binding MoreCard}" />

                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>

                </ListView>

                <Label>Planeswalkers :</Label>
                <ListView ItemsSource="{Binding CurrentPlaneswalkers}"
                          BorderThickness="0"
                          Background="#222"
                          MouseDoubleClick="SelectionChanged"
                          Grid.Row="3"
                          SelectionMode="Single">

                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem">
                            <Setter Property="HorizontalContentAlignment"
                                    Value="Stretch" />
                            <Setter Property="Padding"
                                    Value="0" />
                            <Setter Property="Background"
                                    Value="#000" />
                        </Style>
                    </ListView.ItemContainerStyle>

                    <ListView.ContextMenu>
                        <ContextMenu>
                            <MenuItem Header="Set Commandant"
                                      Click="SetCommandant"
                                      CommandParameter="{Binding RelativeSource={RelativeSource Self}, Path=Parent}" />
                            <MenuItem Header="To Side"
                                      Click="ToSide"
                                      CommandParameter="{Binding RelativeSource={RelativeSource Self}, Path=Parent}" />
                        </ContextMenu>
                    </ListView.ContextMenu>

                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Grid Height="20"
                                  MouseWheel="ScrollViewer_MouseWheel">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="20"></ColumnDefinition>
                                    <ColumnDefinition Width="20"></ColumnDefinition>
                                    <ColumnDefinition Width="20"></ColumnDefinition>
                                    <ColumnDefinition Width="*"></ColumnDefinition>
                                    <ColumnDefinition Width="auto"></ColumnDefinition>
                                </Grid.ColumnDefinitions>

                                <Label Foreground="White"
                                       Padding="4,1,1,1"
                                       Grid.Column="3"
                                       Content="{Binding Card.Name}"></Label>

                                <local:ManaCost Grid.Column="4"
                                                Cost="{Binding Card.ManaCost}"
                                                HorizontalAlignment="Right" />

                                <Button Grid.Column="0"
                                        Height="20"
                                        Foreground="Black"
                                        Content="-"
                                        Command="{Binding LessCard}" />
                                <Label  Grid.Column="1"
                                        Height="20"
                                        Padding="2"
                                        Foreground="White"
                                        Content="{Binding Quantity}"
                                        HorizontalAlignment="Center"></Label>
                                <Button Grid.Column="2"
                                        Height="20"
                                        Foreground="Black"
                                        Content="+"
                                        Command="{Binding MoreCard}" />

                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>

                </ListView>

                <Label>Lands :</Label>
                <ListView ItemsSource="{Binding CurrentLands}"
                          BorderThickness="0"
                          Background="#222"
                          MouseDoubleClick="SelectionChanged"
                          Grid.Row="3"
                          SelectionMode="Single">

                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem">
                            <Setter Property="HorizontalContentAlignment"
                                    Value="Stretch" />
                            <Setter Property="Padding"
                                    Value="0" />
                            <Setter Property="Background"
                                    Value="#000" />
                        </Style>
                    </ListView.ItemContainerStyle>

                    <ListView.ContextMenu>
                        <ContextMenu>
                            <MenuItem Header="Set Commandant"
                                      Click="SetCommandant"
                                      CommandParameter="{Binding RelativeSource={RelativeSource Self}, Path=Parent}" />
                            <MenuItem Header="To Side"
                                      Click="ToSide"
                                      CommandParameter="{Binding RelativeSource={RelativeSource Self}, Path=Parent}" />
                        </ContextMenu>
                    </ListView.ContextMenu>

                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Grid Height="20"
                                  MouseWheel="ScrollViewer_MouseWheel">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="20"></ColumnDefinition>
                                    <ColumnDefinition Width="20"></ColumnDefinition>
                                    <ColumnDefinition Width="20"></ColumnDefinition>
                                    <ColumnDefinition Width="*"></ColumnDefinition>
                                    <ColumnDefinition Width="auto"></ColumnDefinition>
                                </Grid.ColumnDefinitions>

                                <Label Foreground="White"
                                       Padding="4,1,1,1"
                                       Grid.Column="3"
                                       Content="{Binding Card.Name}" />

                                <local:ManaCost Grid.Column="4"
                                                Cost="{Binding Card.ManaCost}"
                                                HorizontalAlignment="Right" />

                                <Button Grid.Column="0"
                                        Height="20"
                                        Foreground="Black"
                                        Content="-"
                                        Command="{Binding LessCard}" />
                                <Label  Grid.Column="1"
                                        Height="20"
                                        Padding="2"
                                        Foreground="White"
                                        Content="{Binding Quantity}"
                                        HorizontalAlignment="Center" />
                                <Button Grid.Column="2"
                                        Height="20"
                                        Foreground="Black"
                                        Content="+"
                                        Command="{Binding MoreCard}" />

                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>

                </ListView>

                <Label>Side :</Label>
                <ListView ItemsSource="{Binding CurrentSide}"
                          BorderThickness="0"
                          Background="#222"
                          MouseDoubleClick="SelectionChanged"
                          SelectionMode="Single">

                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem">
                            <Setter Property="HorizontalContentAlignment"
                                    Value="Stretch" />
                            <Setter Property="Padding"
                                    Value="0" />
                            <Setter Property="Background"
                                    Value="#444" />
                        </Style>
                    </ListView.ItemContainerStyle>

                    <ListView.ContextMenu>
                        <ContextMenu>
                            <MenuItem Header="To Deck"
                                      Click="ToDeck"
                                      CommandParameter="{Binding RelativeSource={RelativeSource Self}, Path=Parent}" />
                        </ContextMenu>
                    </ListView.ContextMenu>

                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Grid Height="20"
                                  MouseWheel="ScrollViewer_MouseWheel">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="20"></ColumnDefinition>
                                    <ColumnDefinition Width="20"></ColumnDefinition>
                                    <ColumnDefinition Width="20"></ColumnDefinition>
                                    <ColumnDefinition Width="*"></ColumnDefinition>
                                    <ColumnDefinition Width="auto"></ColumnDefinition>
                                </Grid.ColumnDefinitions>

                                <Label Foreground="Gray"
                                       Padding="4,1,1,1"
                                       Grid.Column="3"
                                       Content="{Binding Card.Name}"></Label>

                                <local:ManaCost Grid.Column="4"
                                                Cost="{Binding Card.ManaCost}"
                                                HorizontalAlignment="Right" />

                                <Button Grid.Column="0"
                                        Height="20"
                                        Foreground="Black"

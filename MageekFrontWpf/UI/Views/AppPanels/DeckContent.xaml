                        </DataTemplate>
                    </ListView.ItemTemplate>

                </ListView>

            </StackPanel>

        </ScrollViewer>

        <StackPanel Visibility="{Binding IsActive, Converter={StaticResource BoolToVis}}"
                    Grid.RowSpan="4"
                    Grid.ColumnSpan="2"
                    Background="#222">
            <Label HorizontalAlignment="Center"
                   VerticalAlignment="Center">No deck selected</Label>
        </StackPanel>

        <Grid Background="Black"
              Grid.RowSpan="5"
              Visibility="{Binding IsLoading, Converter={StaticResource BoolToVis}}">
            <controls:BusyIndicator></controls:BusyIndicator>
        </Grid>

    </Grid>

</mvvm:BaseUserControl>

<mvvm:BaseUserControl xmlns:ui="clr-namespace:PlaziatWpf.Controls"
                      x:Class="PlaziatWpf.Controls.OutputMsg"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
                      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                      xmlns:local="clr-namespace:PlaziatWpf.Controls"
                      xmlns:mvvm="clr-namespace:PlaziatWpf.Mvvm"
                      mc:Ignorable="d"
                      d:DesignHeight="450"
                      d:DesignWidth="800" Margin="0" Padding="0">

    <Grid ToolTip="{Binding Msgs}" Margin="0">

        <Label HorizontalAlignment="Center" 
               Margin="0" Padding="0"
               Foreground="White"
               Content="{Binding Msg}" />

    </Grid>
    
</mvvm:BaseUserControl>

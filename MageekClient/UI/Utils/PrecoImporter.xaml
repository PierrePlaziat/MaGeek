<Window x:Class="MaGeek.UI.Windows.Importers.PrecoImporter"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MaGeek.UI.Windows.Importers"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Background="#333">

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
        </Grid.RowDefinitions>

        <ListView Name="PrecoListView"  
                  ItemsSource="{Binding PrecoList}" 
                  MouseDoubleClick="ListView_MouseDoubleClick">
        </ListView>

        <DockPanel Grid.Row="1">
            <Button Click="Button_Click">Import Selected Decks</Button>
            <CheckBox IsChecked="{Binding AsOwned}" Foreground="White" Margin="1.5">As Owned</CheckBox>
        </DockPanel>
        

    </Grid>
    
</Window>

<local:TemplatedUserControl xmlns:local="clr-namespace:MaGeek.UI"
                            x:Class="MaGeek.UI.CardInspector"
                            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                            xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                            xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                            xmlns:controls="clr-namespace:MaGeek.UI.Controls"
                            xmlns:svg="http://sharpvectors.codeplex.com/svgc/"
                            mc:Ignorable="d">

    <Grid Background="Black">

        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="360"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>

        <Grid />
        <local:CardIllustration Width="255"
                                Height="360"
                                Margin="0"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Top"
                                SelectedVariant="{Binding SelectedVariant.Card, RelativeSource={RelativeSource FindAncestor, AncestorType=UserControl},Mode=TwoWay}" />

        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"></RowDefinition>
                <RowDefinition Height="*" ></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="auto"></RowDefinition>
            </Grid.RowDefinitions>

            <!-- Totals and means -->
            <StackPanel Grid.Row="0">

                <Grid  Margin="7,0,7,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="72"></ColumnDefinition>
                        <ColumnDefinition Width="40"></ColumnDefinition>
                        <ColumnDefinition Width="100"></ColumnDefinition>
                    </Grid.ColumnDefinitions>

                    <Label Grid.Column="0"
                           HorizontalAlignment="Center"
                           Content="{Binding TotalGot}" />
                    <Label Grid.Column="1"
                           HorizontalAlignment="Center"
                           Content="{Binding MeanPrice}" />
                    <DockPanel Grid.Column="2"
                               HorizontalAlignment="Right">
                        <Label Content="(" />
                        <Label Content="{Binding VariantCount}" />
                        <Label Content=")" />
                    </DockPanel>

                </Grid>

                <Separator Height="1"
                           Margin="0"
                           Background="#111"></Separator>

            </StackPanel>

            <!-- Variants -->
            <ListView Grid.Row="1"
                      BorderThickness="0"
                      Name="VariantListBox"
                      ItemsSource="{Binding Variants}"
                      SelectionMode="Single"
                      HorizontalAlignment="Stretch"
                      Margin="0"
                      Padding="0" 
                      SelectedItem="{Binding SelectedVariant}">

                <ListView.ContextMenu>
                    <ContextMenu>
                        <MenuItem Header="Set FAV"
                                  Click="SetFav" />
                        <MenuItem Header="Add to Deck"
                                  Click="AddToCurrentDeck" />
                    </ContextMenu>
                </ListView.ContextMenu>

                <ListView.ItemTemplate>

                    <DataTemplate>

                        <Grid Height="25" Margin="0">

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="auto"></ColumnDefinition>
                                <ColumnDefinition Width="40"></ColumnDefinition>
                                <ColumnDefinition Width="50"></ColumnDefinition>
                                <ColumnDefinition Width="*"></ColumnDefinition>
                            </Grid.ColumnDefinitions>

                            <DockPanel Grid.Column="0"
                                       Height="25"
                                       Margin="0">

                                <Button Width="16"
                                        Height="25"
                                        Margin="0,0,0,0"
                                        Padding="0"
                                        Background="#000"
                                        Foreground="#444"
                                        Click="SubstractCardFromCollection"
                                        Content="-"
                                        FontWeight="ExtraBlack"
                                        BorderThickness="0">
                                    <Button.Resources>
                                        <Style TargetType="Border">
                                            <Setter Property="CornerRadius"
                                                    Value="7,0,0,8" />
                                        </Style>
                                    </Button.Resources>
                                </Button>

                                <Label  Width="40"
                                        HorizontalContentAlignment="Center"
                                        HorizontalAlignment="Center"
                                        Foreground="White"
                                        Padding="5"
                                        Background="#111"
                                        Margin="0,0,0,0"
                                        Content="{Binding Card.Collected}" />

                                <Button Width="16"
                                        Height="25"
                                        Margin="0,0,0,0"
                                        Padding="0"
                                        Background="#000"
                                        Foreground="#666"
                                        HorizontalAlignment="Right"
                                        Click="AddCardToCollection"
                                        Content="+"
                                        FontWeight="ExtraBlack"
                                        BorderThickness="0">
                                    <Button.Resources>
                                        <Style TargetType="Border">
                                            <Setter Property="CornerRadius"
                                                    Value="0,7,8,0" />
                                        </Style>
                                    </Button.Resources>
                                </Button>
                                
                            </DockPanel>

                            <Label Content="{Binding GetPrice}"
                                   Grid.Column="1"
                                   HorizontalAlignment="Center"
                                   Foreground="{Binding GetPriceColor}"
                                   Margin="0,5,0,0"
                                   Padding="0" />

                            <Border Background="{Binding GetRarityColor}"
                                    Margin="0" Width="25"
                                    Grid.Column="2">

                                <Border.Resources>
                                    <Style TargetType="Border">
                                        <Setter Property="CornerRadius"
                                                Value="20" />
                                    </Style>
                                </Border.Resources>

                            </Border>
                            <svg:SvgViewbox Grid.Column="2"
                                            Source="{Binding Card.Set.Svg}"
                                            Margin="5"
                                            Grid.RowSpan="2"
                                            Width="15"
                                            Height="15" />

                            <Label Grid.Column="3"
                                   Content="{Binding Card.Set.Name}" />

                        </Grid>

                    </DataTemplate>

                </ListView.ItemTemplate>

            </ListView>

            <!-- Legalities -->
            <ScrollViewer Grid.Row="2"
                         Background="#000">
                <StackPanel>
                    
                    <DockPanel Width="100" Height="20" HorizontalAlignment="Left">
                        <Label Margin="0" Padding="0" Content="Standard" />
                        <Label Margin="0" Padding="0" Content=" : " /> 
                        <Label Margin="0" Padding="0" Content="{Binding Legalities.Standard}" />
                    </DockPanel>

                    <DockPanel Width="100" Height="20" HorizontalAlignment="Left">
                        <Label Margin="0" Padding="0" Content="Legacy" />
                        <Label Margin="0" Padding="0" Content=" : " /> 
                        <Label Margin="0" Padding="0" Content="{Binding Legalities.Legacy}" />
                    </DockPanel>

                    <DockPanel Width="100" Height="20" HorizontalAlignment="Left">
                        <Label Margin="0" Padding="0" Content="Vintage" />
                        <Label Margin="0" Padding="0" Content=" : " /> 
                        <Label Margin="0" Padding="0" Content="{Binding Legalities.Vintage}" />
                    </DockPanel>

                    <DockPanel Width="100" Height="20" HorizontalAlignment="Left">
                        <Label Margin="0" Padding="0" Content="Duel" />
                        <Label Margin="0" Padding="0" Content=" : " /> 
                        <Label Margin="0" Padding="0" Content="{Binding Legalities.Duel}" />
                    </DockPanel>

                    <DockPanel Width="100" Height="20" HorizontalAlignment="Left">
                        <Label Margin="0" Padding="0" Content="Commander" />
                        <Label Margin="0" Padding="0" Content=" : " /> 
                        <Label Margin="0" Padding="0" Content="{Binding Legalities.Commander}" />
                    </DockPanel>

                    <DockPanel Width="100" Height="20" HorizontalAlignment="Left">
                        <Label Margin="0" Padding="0" Content="Brawl" />
                        <Label Margin="0" Padding="0" Content=" : " /> 
                        <Label Margin="0" Padding="0" Content="{Binding Legalities.Brawl}" />
                    </DockPanel>

                    <DockPanel Width="100" Height="20" HorizontalAlignment="Left">
                        <Label Margin="0" Padding="0" Content="Explorer" />
                        <Label Margin="0" Padding="0" Content=" : " /> 
                        <Label Margin="0" Padding="0" Content="{Binding Legalities.Explorer}" />
                    </DockPanel>

                    <DockPanel Width="100" Height="20" HorizontalAlignment="Left">
                        <Label Margin="0" Padding="0" Content="Future" />
                        <Label Margin="0" Padding="0" Content=" : " /> 
                        <Label Margin="0" Padding="0" Content="{Binding Legalities.Future}" />
                    </DockPanel>

                    <DockPanel Width="100" Height="20" HorizontalAlignment="Left">
                        <Label Margin="0" Padding="0" Content="Gladiator" />
                        <Label Margin="0" Padding="0" Content=" : " /> 
                        <Label Margin="0" Padding="0" Content="{Binding Legalities.Gladiator}" />
                    </DockPanel>

                    <DockPanel Width="100" Height="20" HorizontalAlignment="Left">
                        <Label Margin="0" Padding="0" Content="Historic" />
                        <Label Margin="0" Padding="0" Content=" : " /> 
                        <Label Margin="0" Padding="0" Content="{Binding Legalities.Historic}" />
                    </DockPanel>

                    <DockPanel Width="100" Height="20" HorizontalAlignment="Left">
                        <Label Margin="0" Padding="0" Content="Historicbrawl" />
                        <Label Margin="0" Padding="0" Content=" : " /> 
                        <Label Margin="0" Padding="0" Content="{Binding Legalities.Historicbrawl}" />
                    </DockPanel>

                    <DockPanel Width="100" Height="20" HorizontalAlignment="Left">
                        <Label Margin="0" Padding="0" Content="Modern" />
                        <Label Margin="0" Padding="0" Content=" : " /> 
                        <Label Margin="0" Padding="0" Content="{Binding Legalities.Modern}" />
                    </DockPanel>

                    <DockPanel Width="100" Height="20" HorizontalAlignment="Left">
                        <Label Margin="0" Padding="0" Content="Oathbreaker" />
                        <Label Margin="0" Padding="0" Content=" : " /> 
                        <Label Margin="0" Padding="0" Content="{Binding Legalities.Oathbreaker}" />
                    </DockPanel>

                    <DockPanel Width="100" Height="20" HorizontalAlignment="Left">
                        <Label Margin="0" Padding="0" Content="Oldschool" />
                        <Label Margin="0" Padding="0" Content=" : " /> 
                        <Label Margin="0" Padding="0" Content="{Binding Legalities.Oldschool}" />
                    </DockPanel>

                    <DockPanel Width="100" Height="20" HorizontalAlignment="Left">
                        <Label Margin="0" Padding="0" Content="Pauper" />
                        <Label Margin="0" Padding="0" Content=" : " /> 
                        <Label Margin="0" Padding="0" Content="{Binding Legalities.Pauper}" />
                    </DockPanel>

                    <DockPanel Width="100" Height="20" HorizontalAlignment="Left">
                        <Label Margin="0" Padding="0" Content="Paupercommander" />
                        <Label Margin="0" Padding="0" Content=" : " /> 
                        <Label Margin="0" Padding="0" Content="{Binding Legalities.Paupercommander}" />
                    </DockPanel>

                    <DockPanel Width="100" Height="20" HorizontalAlignment="Left">
                        <Label Margin="0" Padding="0" Content="Penny" />
                        <Label Margin="0" Padding="0" Content=" : " /> 
                        <Label Margin="0" Padding="0" Content="{Binding Legalities.Penny}" />
                    </DockPanel>

                    <DockPanel Width="100" Height="20" HorizontalAlignment="Left">
                        <Label Margin="0" Padding="0" Content="Pioneer" />
                        <Label Margin="0" Padding="0" Content=" : " /> 
                        <Label Margin="0" Padding="0" Content="{Binding Legalities.Pioneer}" />
                    </DockPanel>

                    <DockPanel Width="100" Height="20" HorizontalAlignment="Left">
                        <Label Margin="0" Padding="0" Content="Predh" />
                        <Label Margin="0" Padding="0" Content=" : " /> 
                        <Label Margin="0" Padding="0" Content="{Binding Legalities.Predh}" />
                    </DockPanel>

                    <DockPanel Width="100" Height="20" HorizontalAlignment="Left">
                        <Label Margin="0" Padding="0" Content="Premodern" />
                        <Label Margin="0" Padding="0" Content=" : " /> 
                        <Label Margin="0" Padding="0" Content="{Binding Legalities.Premodern}" />
                    </DockPanel>

                    <DockPanel Width="100" Height="20" HorizontalAlignment="Left">
                        <Label Margin="0" Padding="0" Content="Alchemy" />
                        <Label Margin="0" Padding="0" Content=" : " /> 
                        <Label Margin="0" Padding="0" Content="{Binding Legalities.Alchemy}" />
                    </DockPanel>
                
                </StackPanel>
            </ScrollViewer>

            <!-- Relateds -->
            <ListView Grid.Row="3"
                      Margin="0"
                      Padding="0"
                      BorderThickness="0"
                      HorizontalAlignment="Stretch"
                      ItemsSource="{Binding RelatedCards}"
                      MouseDoubleClick="GoToRelated">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Grid Height="25"
                            Margin="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"></ColumnDefinition>
                                <ColumnDefinition Width="15"></ColumnDefinition>
                                <ColumnDefinition Width="*"></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <Label Grid.Column="0"
                                   Content="{Binding Role}"></Label>
                            <Label Grid.Column="1"
                                   Content=":"></Label>
                            <Label Grid.Column="2"
                                   Content="{Binding Card.Name}"></Label>
                            <Label Grid.Column="2"
                                   Content="{Binding Token.Name}"></Label>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <!-- Rulings -->
            <ListView Grid.Row="4"
                      Background="#000"
                      Visibility="{Binding ShowRules}"
                      MaxHeight="100"
                      MinHeight="0"
                      ItemsSource="{Binding Rulings}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <DockPanel Margin="0"
                                   ToolTip="{Binding Comment}">
                            <Label Margin="0"
                                   Padding="0"
                                   Content="{Binding Date}"></Label>
                            <Label Margin="0"
                                   Padding="0"
                                   Content=" : "></Label>
                            <Label Margin="0"
                                   Padding="0"
                                   Foreground="White"
                                   Content="{Binding Text}"></Label>
                        </DockPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <!-- Tags -->
            <StackPanel Grid.Row="5">

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="100"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="20"></RowDefinition>
                        <RowDefinition Height="auto"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                    </Grid.RowDefinitions>
                    <TextBox Grid.Column="0" 
                             Name="NewTag"
                             HorizontalAlignment="Stretch"
                             KeyUp="NewTag_KeyUp"
                             LostFocus="NewTag_LostFocus"></TextBox>
                    <Button Grid.Column="1"
                            Width="100"
                            Click="AddTag">Add Tag</Button>
                    
                <Border Width="298" Grid.Row="1"
                        BorderBrush="Black"
                        BorderThickness="1"
                        Background="Gray"
                        Name="sugestions"
                        Visibility="Collapsed">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel Name="resultStack"></StackPanel>
                    </ScrollViewer>
                </Border>

                    <ItemsControl ItemsSource="{Binding Tags}"
                                  Grid.Row="2">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border BorderBrush="#FF000000"
                                    BorderThickness="1"
                                    CornerRadius="8"
                                    Background="#555"
                                    Margin="3">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition></ColumnDefinition>
                                        <ColumnDefinition></ColumnDefinition>
                                    </Grid.ColumnDefinitions>
                                    <Label Content="{Binding TagContent}"
                                           Foreground="White" />
                                    <Button Click="DeleteTag"
                                            Grid.Column="1"
                                            Content="X"
                                            Foreground="Black"
                                            BorderThickness="0"
                                            Background="Transparent" />
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                </Grid>

            </StackPanel>

            <!-- Links -->
            <Grid Grid.Row="7">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0"
                        Click="LinkWeb_Cardmarket">Cardmarket</Button>
                <Button Grid.Column="1"
                        Click="LinkWeb_EdhRec">EdhRec</Button>
                <Button Grid.Column="2"
                        Click="LinkWeb_Scryfall">Scryfall</Button>

            </Grid>

        </Grid>

        <StackPanel Background="#222"
                    Grid.ColumnSpan="2"
                    Grid.RowSpan="5"
                    Visibility="{Binding IsActive}">
            <Label HorizontalAlignment="Center"
                   VerticalAlignment="Center">No card selected</Label>
        </StackPanel>

        <Grid Background="Black"
              Grid.Row="0"
              Grid.RowSpan="6"
              Visibility="{Binding IsLoading}">
            <StackPanel HorizontalAlignment="Center"
                        VerticalAlignment="Center">
                <Label Content="{Binding LoadMsg}"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center" />
                <controls:BusyIndicator HorizontalAlignment="Center"
                                        VerticalAlignment="Center" />
            </StackPanel>
        </Grid>

    </Grid>

</local:TemplatedUserControl>
